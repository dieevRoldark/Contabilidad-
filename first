#desarrollo de aplicación destinada al uso diaro en granjas de postura de huevos
#se busca tener caracteristicas de contabilidad, predicciones de posturas y clasificación de producción

lass TipoHuevo:
    def __init__(self, tamaño, peso, precio, fecha):
        self.tamaño = tamaño
        self.peso = peso
        self.precio = precio
        self.fecha = fecha

    def mensaje(self):
            print("Pesaste un huevo de tamaño", self.tamaño, "y peso", self.peso, "gramos")
        
    def precio_huevo(self):
            print("El precio del huevo es de", self.precio, "pesos")


class Galpon:
    def __init__(self, cantidad_huevos, cantidad_gallinas):
        self.cantidad_huevos = cantidad_huevos
        self.cantidad_gallinas = cantidad_gallinas
        

    def mensaje_galpon(self):
            print("El galpon tiene", self.cantidad_huevos, "huevos,", self.cantidad_gallinas, "gallinas y")

        

huevo1 = TipoHuevo("AAA","67", "800", "10/9/2025")
huevo2 = TipoHuevo("AA","58", "700", "10/9/2025")
huevo3 = TipoHuevo("A","53", "600", "10/9/2025")

print(huevo1.tamaño)

huevo1.mensaje()

huevo1.precio_huevo()
huevo2.mensaje()
huevo2.precio_huevo()

huevo3.mensaje()
huevo3.precio_huevo()

galpon1 = Galpon("490", "470")
galpon1.mensaje_galpon()
